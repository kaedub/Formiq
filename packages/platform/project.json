{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/platform/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b packages/platform/tsconfig.json && cp -r packages/platform/src/services/ai/prompts packages/platform/dist/services/ai/prompts"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config packages/platform/vitest.config.ts"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ESLINT_USE_FLAT_CONFIG=true eslint packages/platform"
      }
    }
  }
}
