generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  locked
  unlocked
  completed
}

enum MilestoneStatus {
  locked
  unlocked
  completed
}

enum QuestionType {
  multi_select
  single_select
  free_text
}

enum ProjectStatus {
  draft
  generating
  ready
}

enum PromptExecutionStage {
  project_context
  milestone_outline
  milestone_validation
  task_generation
  task_validation
}

enum PromptExecutionStatus {
  pending
  success
  failed
}

enum ProjectEventType {
  status_change
  milestone_generated
  task_generated
  task_completed
}

enum ProjectCommitment {
  light
  moderate
  heavy
  dedicated
}

enum ProjectFamiliarity {
  completely_new
  some_experience
  experienced_refining
}

enum ProjectWorkStyle {
  short_daily_sessions
  focused_sessions_per_week
  flexible_or_varies
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  projects Project[]
}

model FocusForm {
  id        String       @id @default(uuid())
  name      String       @unique
  projectId String       @unique
  project   Project      @relation(fields: [projectId], references: [id])
  items     FocusItem[]
}

model FocusItem {
  id           String       @id @default(uuid())
  formId       String
  userId       String
  question     String
  options      String[]     @default([])
  questionType QuestionType
  position     Int
  answer       String? // null until user submits responses; store multi-select joined or JSON string
  answeredAt   DateTime? // set when answer is captured
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  form FocusForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@unique([formId, position])
  @@index([formId])
  @@index([userId])
}

model Project {
  id               String              @id @default(uuid())
  userId           String
  title            String
  commitment       ProjectCommitment
  familiarity      ProjectFamiliarity
  workStyle        ProjectWorkStyle
  status           ProjectStatus       @default(draft)
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  user             User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedAt      DateTime?
  focusForm        FocusForm?
  milestones       Milestone[]
  promptExecutions PromptExecution[]
  events           ProjectEvent[]
}

model Milestone {
  id               String            @id @default(uuid())
  title            String
  summary          String
  position         Int
  status           MilestoneStatus   @default(locked)
  generatedAt      DateTime          @default(now())
  projectId        String
  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks            Task[]
  promptExecutions PromptExecution[]
}

model Task {
  id               String            @id @default(uuid())
  milestoneId      String
  title            String
  description      String
  position         Int
  status           TaskStatus        @default(locked)
  generatedAt      DateTime          @default(now())
  completedAt      DateTime?
  milestone        Milestone         @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  promptExecutions PromptExecution[]
}

model PromptTemplate {
  id               String               @id @default(uuid())
  title            String
  prompt           String
  schema           Json?
  stage            PromptExecutionStage
  version          Int                  @default(1)
  metadata         Json?
  promptExecutions PromptExecution[]
}

model PromptExecution {
  id          String                @id @default(uuid())
  projectId   String
  milestoneId String?
  taskId      String?
  templateId  String?
  stage       PromptExecutionStage
  status      PromptExecutionStatus @default(pending)
  input       Json
  output      Json?
  model       String?
  metadata    Json?
  createdAt   DateTime              @default(now())
  project     Project               @relation(fields: [projectId], references: [id], onDelete: Cascade)
  milestone   Milestone?            @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  task        Task?                 @relation(fields: [taskId], references: [id], onDelete: Cascade)
  template    PromptTemplate?       @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model ProjectEvent {
  id        String           @id @default(uuid())
  projectId String
  eventType ProjectEventType
  payload   Json?
  createdAt DateTime         @default(now())
  project   Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
