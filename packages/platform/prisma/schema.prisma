generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  locked
  unlocked
  completed
}

enum MilestoneStatus {
  locked
  unlocked
  completed
}

enum QuestionType {
  multi_select
  single_select
  free_text
}

enum ProjectStatus {
  draft
  generating
  ready
}

enum PromptExecutionStage {
  project_context
  milestone_outline
  milestone_validation
  task_generation
  task_validation
}

enum PromptExecutionStatus {
  pending
  success
  failed
}

enum ProjectEventType {
  status_change
  milestone_generated
  task_generated
  task_completed
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  projects Project[]
}

model IntakeForm {
  id        String           @id @default(uuid())
  name      String           @unique
  questions IntakeQuestion[]
}

model IntakeQuestion {
  id           String           @id @default(uuid())
  prompt       String
  options      String[]
  questionType QuestionType
  position     Int
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  formId       String
  form         IntakeForm       @relation(fields: [formId], references: [id])
  answers      QuestionAnswer[]
}

model QuestionAnswer {
  id         String         @id @default(uuid())
  userId     String
  projectId  String
  questionId String
  values     String[]
  answeredAt DateTime       @default(now())
  project    Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  question   IntakeQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Project {
  id               String            @id @default(uuid())
  userId           String
  title            String
  status           ProjectStatus     @default(draft)
  generatedAt      DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionAnswers  QuestionAnswer[]
  milestones       Milestone[]
  promptExecutions PromptExecution[]
  events           ProjectEvent[]
}

model Milestone {
  id               String            @id @default(uuid())
  title            String
  summary          String
  context          Json?
  position         Int
  status           MilestoneStatus   @default(locked)
  generatedAt      DateTime?         @default(now())
  metadata         Json?
  projectId        String
  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks            Task[]
  promptExecutions PromptExecution[]
}

model Task {
  id               String            @id @default(uuid())
  milestoneId      String
  title            String
  description      String
  position         Int
  status           TaskStatus        @default(locked)
  generatedAt      DateTime?
  completedAt      DateTime?
  metadata         Json?
  milestone        Milestone         @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  promptExecutions PromptExecution[]
}

model PromptTemplate {
  id               String            @id @default(uuid())
  title            String
  prompt           String
  schema           Json?
  stage            PromptExecutionStage
  version          Int               @default(1)
  metadata         Json?
  promptExecutions PromptExecution[]
}

model PromptExecution {
  id         String                @id @default(uuid())
  projectId  String
  milestoneId String?
  taskId     String?
  templateId String?
  stage      PromptExecutionStage
  status     PromptExecutionStatus @default(pending)
  input      Json
  output     Json?
  model      String?
  metadata   Json?
  createdAt  DateTime              @default(now())
  project    Project               @relation(fields: [projectId], references: [id], onDelete: Cascade)
  milestone  Milestone?            @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  task       Task?                 @relation(fields: [taskId], references: [id], onDelete: Cascade)
  template   PromptTemplate?       @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model ProjectEvent {
  id        String          @id @default(uuid())
  projectId String
  eventType ProjectEventType
  payload   Json?
  createdAt DateTime        @default(now())
  project   Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
